                <a href="#landmark"><img src="<%=image_path("map/landmark.png")%>" /></a>
              </div>
            </div>
          </div>
          <div id="bottom-button">
            <button class="menu-top" onclick="showBottomInfo()"></button>
          </div>
        </div>
        <div id="bottomInfo" style="width:100%; height:0%; background-color : red;"></div>
      </div>
     
    </div>
    <div id="messenger" style="height:100%; width:0%; background-color : red;"></div>
  </div>
 
 
 
 
