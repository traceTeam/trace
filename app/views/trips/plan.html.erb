  <div class="inbody" style="height:680px"  >
    <div id="leftInfo" style="height:100%; width:0%;">
         <!--<a href="http://www.naver.com">네이버</a>-->
         
         <div id="calendar" style="font-size: 5px">
         <%= month_calendar do |date| %>
          <%= date.mday %>
        <% end %>
        </div>
        [ 메모 ]<br>
         <textarea name="content" cols="40"  rows="15"></textarea><br>
        <button type="button">저장하기</button> 
        
    </div>
    
    <div id="kakaomap" class="kakaomap">
      <div style="height:100%; width:100%;">
        <div id="map" style="display:flex;">
          <div id="left-button">
            <button class="menu-top" onclick="showLeftInfo()"></button>
          </div>
          <div id="chat-button">
            <button class="menu-top" onclick="showMessenger()"></button>
          </div>
          <div id="mapTools">
            <div class="dropdown">
              <div class="dropbtn"><img id="mapMenu" src="<%=image_path("map/arrowDown.png") %>" onclick="showMapMenu()"/></div>
              <div id="myDropdown" class="dropdown-content">
                <a href="#hand"><img src="<%=image_path("map/hand.png") %>"/></a>
                <a href="#marker"><img src="<%=image_path("map/marker.png")%>" onclick="selectOverlay('MARKER')"/></a>
