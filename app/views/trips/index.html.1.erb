<p id="notice"><%= notice %></p>

<h1>Listing Trips</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Repository</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
  <% current_user.repositories.each do |repo| %>
    <tr>
      <% repo.trips.each do |trip| %>
        <td><%= trip.title %></p>
        <td><%= trip.content %></p>
        <td><%= trip.repository_id %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
      <% end %>
    </tr>
  <% end %>
  </tbody>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.title %></td>
        <td><%= trip.content %></td>
        <td><%= trip.repository_id %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>

