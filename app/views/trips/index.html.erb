<p id="notice"><%= notice %></p>

<h1>일정 관리</h1>

<table>
  <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <!--<th>Repository</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.title %></td>
        <td><%= trip.content %></td>
        <!--<td><%#= trip.repository_id %></td>-->
        <td><%= link_to 'Show', trip_path(trip)	 %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip_path(trip), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>
<% if params[:repository_id] %>
  <%= link_to '[ New Trip ]', "/repositories/"+params[:repository_id]+"/trips/new" %> &nbsp
  <%= link_to '[ Back ]', repositories_path %>
<% end %>
